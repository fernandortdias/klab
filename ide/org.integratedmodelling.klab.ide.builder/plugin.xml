<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="sampleBuilder"
         name="Sample Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.integratedmodelling.klab.ide.builder.builder.KlabBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="klabNature"
         name="k.LAB Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.integratedmodelling.klab.ide.builder.builder.KlabNature">
         </run>
      </runtime>
      <builder
            id="org.integratedmodelling.klab.ide.builder.klabBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="k.LAB Project Nature commands"
            id="org.integratedmodelling.klab.ide.builder.klabNature.category">
      </category>
      <command
            name="Add/Remove k.LAB Project Nature"
            defaultHandler="org.integratedmodelling.klab.ide.builder.builder.AddRemoveKlabNatureHandler"
            categoryId="org.integratedmodelling.klab.ide.builder.klabNature.category"
            id="org.integratedmodelling.klab.ide.builder.addRemoveKlabNature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="org.integratedmodelling.klab.ide.builder.addRemoveKlabNature"
               label="Disable k.LAB builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              value="org.integratedmodelling.klab.ide.builder.klabNature"
                              property="org.eclipse.core.resources.projectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.integratedmodelling.klab.ide.builder.addRemoveKlabeNature"
               label="Enable k.LAB builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 value="org.integratedmodelling.klab.ide.builder.klabNature"
                                 property="org.eclipse.core.resources.projectNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="klabProblem"
         name="k.LAB Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
